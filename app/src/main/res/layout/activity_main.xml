<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view_calendar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/calendar"/>

    <EditText
        android:layout_marginTop="30dp"
        android:layout_below="@+id/image_view_calendar"
        android:textSize="20dp"
        android:id="@+id/edit_text_event"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:hint="Event name..."
        android:textColorHint="@color/hint_color"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button_send_event"
        android:layout_below="@+id/edit_text_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send!"
        android:background="@drawable/button_selector"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button_check_events"
        android:layout_below="@+id/button_send_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check events!"
        android:background="@drawable/button_selector"
        />

</RelativeLayout>
